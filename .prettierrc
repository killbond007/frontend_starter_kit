{
	"printWidth": 120,
	"useTabs": true,
	"tabWidth": 2,
	"singleQuote": true,
	"semi": false,
	"endOfLine": "lf",
	"trailingComma": "es5",
	"bracketSpacing": true,
	"overrides": [
		{
			"files": "./**/*.js",
			"options": {
				"parser": "babel"
			}
		},
		{
			"files": "./**/*.json",
			"options": {
				"parser": "json"
			}
		},
		{
			"files": ".prettierrc",
			"options": {
				"parser": "json"
			}
		}
	]
}
